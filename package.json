{
	"name": "bingo",
	"version": "1.0.0",
	"description": "Bingo server",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon --watch src -e js,ts,json --exec \"ts-node src/index.ts\"",
		"servBuild": "tsup src/index.ts --format cjs --clean",
		"build": "npm run client && npm run servBuild",
		"start": "node dist/index.js",
		"client": "npm run --prefix client build",
		"prepare": "husky install"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/node": "^18.11.10",
		"husky": "^8.0.3",
		"nodemon": "^2.0.20",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.1",
		"tsup": "^6.5.0",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"socket.io": "^4.5.4"
	}
}
